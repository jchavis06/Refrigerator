<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/msg_input"
        android:layout_width="wrap_content"
        android:layout_height="159dp"
        android:ems="15"
        android:hint="@string/edmsg"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:gravity="center"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

    <Button
        android:id="@+id/msg_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grocery"
        android:text="@string/sdmsg"
        android:textColor="@color/colorSec"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

    <TextView
        android:id="@+id/postFrid"
        android:layout_width="255dp"
        android:layout_height="25dp"
        android:text="Posting to Fridge"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/msg_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541" />

    <Button
        android:id="@+id/msgRec"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:background="@color/grocery"
        android:text="Change Recipients"
        android:textColor="@color/colorSec"
        app:layout_constraintBottom_toTopOf="@id/msg_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/postFrid"
        app:layout_constraintVertical_bias="0.772" />

</android.support.constraint.ConstraintLayout>